# SnapRate Frontend Environment Configuration
# Copy this file to .env.local for local development settings

# API Configuration
# Base URL for the backend API
VITE_API_BASE_URL=http://localhost:8000

# Environment
# Current environment (development, staging, production)
VITE_NODE_ENV=development

# Feature flags
# Enable/disable Progressive Web App features
VITE_ENABLE_PWA=false
# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=false
# Enable/disable advanced AI features
VITE_ENABLE_ADVANCED_AI=false

# Performance settings
# Image compression quality (0-1, where 1 is highest quality)
VITE_IMAGE_COMPRESSION_QUALITY=0.9
# Maximum allowed image size in bytes (10MB)
VITE_MAX_IMAGE_SIZE=10485760
# Enable/disable image optimization
VITE_OPTIMIZE_IMAGES=true
# Cache timeout in seconds
VITE_CACHE_TIMEOUT=3600

# Error reporting
# Enable/disable error reporting to monitoring service
VITE_ERROR_REPORTING_ENABLED=false
# Error reporting service URL (if enabled)
VITE_ERROR_REPORTING_URL=

# Development settings
# Enable/disable detailed logging
VITE_ENABLE_DEBUG_LOGGING=true
# Enable/disable mock API responses
VITE_USE_MOCK_API=false