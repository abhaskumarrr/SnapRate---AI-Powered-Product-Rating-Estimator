# SnapRate Backend Production Environment Variables

# Application settings
APP_NAME=SnapRate API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=WARNING  # Less verbose logging in production

# CORS settings
CORS_ORIGINS=https://snaprate.example.com

# File upload settings
MAX_FILE_SIZE=5242880  # 5MB in bytes (more restrictive in production)
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
TEMP_FILE_DIR=/tmp/snaprate

# API settings
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4  # More workers for production
RELOAD=false  # No auto-reload in production

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW=3600  # Window size in seconds (1 hour)

# Security settings
TRUSTED_HOSTS=snaprate.example.com,api.snaprate.example.com
BEHIND_PROXY=true  # Usually behind a reverse proxy in production

# Performance settings
CACHE_ENABLED=true
CACHE_TTL=86400  # Cache TTL in seconds (24 hours)
MODEL_OPTIMIZATION=true  # Enable model optimization techniques

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090