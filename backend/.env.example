# SnapRate Backend Environment Variables

# Application settings
APP_NAME=SnapRate API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File upload settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
TEMP_FILE_DIR=/tmp/snaprate

# API settings
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1  # Number of worker processes
RELOAD=true  # Auto-reload on code changes (development only)

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Requests per window
RATE_LIMIT_WINDOW=3600  # Window size in seconds (1 hour)

# Security settings
TRUSTED_HOSTS=localhost,127.0.0.1
BEHIND_PROXY=false  # Set to true if behind a reverse proxy

# Performance settings
CACHE_ENABLED=true
CACHE_TTL=3600  # Cache TTL in seconds (1 hour)
MODEL_OPTIMIZATION=false  # Enable model optimization techniques

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090